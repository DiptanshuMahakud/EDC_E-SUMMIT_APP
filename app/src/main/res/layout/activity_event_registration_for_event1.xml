<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventRegistrationForEvent1"
    android:background="@drawable/bg_shape">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="377dp"
        android:layout_height="583dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:text="Team Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/teamName"
                android:layout_width="349dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="72dp"
                android:background="#D1C9C9"
                android:ems="10"
                android:hint="Team Name"
                android:inputType="text"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="136dp"
                android:text="Team Leader"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/leaderName"
                android:layout_width="349dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="52dp"
                android:background="#D1C9C9"
                android:ems="10"
                android:hint="Leader's Name"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teamName" />

            <EditText
                android:id="@+id/leaderEmail"
                android:layout_width="351dp"
                android:layout_height="51dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="240dp"
                android:background="#D1C9C9"
                android:ems="10"
                android:hint="Leader's Email"
                android:inputType="text"
                android:text=""
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="328dp"
                android:text="Member 1"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/nameMember1"
                android:layout_width="346dp"
                android:layout_height="58dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="372dp"
                android:background="#D1C9C9"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailMember1"
                android:layout_width="346dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="452dp"
                android:background="#D1C9C9"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="532dp"
                android:text="Member 2"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <EditText
                android:id="@+id/nameMember2"
                android:layout_width="346dp"
                android:layout_height="58dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="570dp"
                android:background="#D1C9C9"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailMember2"
                android:layout_width="349dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="650dp"
                android:background="#D1C9C9"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/registerForEventButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="720dp"
                android:text="Register"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

